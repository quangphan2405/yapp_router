class router_scoreboard extends uvm_scoreboard;

   // UVM component utility macro
   `uvm_component_utils(router_scoreboard)

   // YAPP analysis imp object
   `uvm_analysis_imp_decl(_yapp)

   // Channel analysis imp objects
   `uvm_analysis_imp_decl(_chan0)
   `uvm_analysis_imp_decl(_chan1)
   `uvm_analysis_imp_decl(_chan2)

   // Constructor
   function new(string name, uvm_component parent);
      super.new(name, parent);
      uvm_analysis_imp_yapp = new("imp_yapp", this);
      uvm_analysis_imp_chan0 = new("imp_chan0", this);
      uvm_analysis_imp_chan1 = new("imp_chan1", this);
      uvm_analysis_imp_chan2 = new("imp_chan2", this);
   endfunction : new
   
